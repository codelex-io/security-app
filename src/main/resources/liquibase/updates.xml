<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create clients table" author="martins">
        <createSequence
                sequenceName="clients_seq"/>
        <createTable
                tableName="clients">
            <column
                    name="id"
                    type="bigint"
                    defaultValueSequenceNext="clients_seq"
            >
                <constraints
                        primaryKey="true"
                        nullable="false"
                        primaryKeyName="pk_clients"
                />
            </column>
            <column
                    name="first_name"
                    type="varchar(255)"
            >
                <constraints
                        primaryKey="false"
                        nullable="false"
                />
            </column>
            <column
                    name="last_name"
                    type="varchar(255)">
                <constraints
                        nullable="false"
                />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create units table" author="martins">
        <createSequence
                sequenceName="units_seq"/>
        <createTable
                tableName="units">
            <column
                    name="id"
                    type="bigint"
                    defaultValueSequenceNext="units_seq"
            >
                <constraints
                        primaryKey="true"
                        nullable="false"
                        primaryKeyName="pk_units"
                />
            </column>
            <column
                    name="latitude"
                    type="varchar(255)"
            >
                <constraints
                        primaryKey="false"
                        nullable="false"
                />
            </column>
            <column
                    name="longitude"
                    type="varchar(255)">
                <constraints
                        nullable="false"
                />
            </column>
            <column
                    name="available"
                    type="boolean">
                <constraints
                        nullable="false"
                />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create incidents table" author="martins">
        <createSequence
                sequenceName="incidents_seq"/>
        <createTable
                tableName="incidents">
            <column
                    name="id"
                    type="bigint"
                    defaultValueSequenceNext="incidents_seq"
            >
                <constraints
                        primaryKey="true"
                        nullable="false"
                        primaryKeyName="pk_incidents"
                />
            </column>
            <column
                    name="client_id"
                    type="bigint"
            >
                <constraints
                        primaryKey="false"
                        nullable="true"
                />
            </column>
            <column
                    name="latitude"
                    type="decimal">
                <constraints
                        nullable="false"
                />
            </column>
            <column
                    name="longitude"
                    type="decimal">
                <constraints
                        nullable="false"
                />
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="incidents"
                baseColumnNames="client_id"
                constraintName="fk_incidents_clientId_clients_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                onDelete="SET NULL"
        />
        <createIndex
                tableName="incidents"
                indexName="idx_incidents_client_id">
            <column name="client_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>